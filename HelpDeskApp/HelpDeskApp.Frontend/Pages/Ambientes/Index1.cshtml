@page
@using HelpDeskApp.Dominio
@using HelpDeskApp.Persistencia
@model HelpDeskApp.frontend.Pages.Ambientes.Index1Model
@{
}

<h1>Listado de Ambientes</h1>
<a class="btn btn-primary" asp-page="./Create1">Crear Ambiente</a>

<table class="table table-dark table-striped">
  <thead>
    <tr>
     
      <th scope="col">Nombre</th>
      <th scope="col">Ubicación</th>
       <th scope="col">Opciones</th>
       <th scope="col">Editar</th>

      

    </tr>
  </thead>
  <tbody>
    @foreach (var ambiente in Model.ambientes)
    {
        <tr>
          
          <td>@ambiente.AmbNombre</td>
          <td>@ambiente.AmbUbicacion</td>
          <td>
          <a class="btn btn-secondary" asp-page="./Details1" asp-route-id="@ambiente.Id">Detalle</a></td>
          <td>
            <a class="btn btn-secondary" asp-page="./Edit1" asp-route-id="@ambiente.Id">Editar</a>
          </td>
         </tr>

    }
  </tbody>
</table>
<a class="btn btn-secondary" asp-page="/Index">Volver</a>
